@page
@model SM.APP.Pages.Admin.Class.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class.ClassID" />
            <div class="form-group">
                <label asp-for="Class.ClassName" class="control-label"></label>
                <input asp-for="Class.ClassName" class="form-control" />
                <span asp-validation-for="Class.ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.MeetingID" class="control-label"></label>
                <select asp-for="Class.MeetingID" class="form-control" asp-items="ViewBag.MeetingID"></select>
                <span asp-validation-for="Class.MeetingID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Class.IsActive" /> @Html.DisplayNameFor(model => model.Class.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
