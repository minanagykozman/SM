@page
@model SM.APP.Pages.Admin.Events.CreateModel
@{
}


<div class="card shadow-lg p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row g-3 mt-2">
            <!-- Event Name (Full Row) -->
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Event.EventName" class="form-control" id="EventName" placeholder="Enter Event Name">
                    <label for="EventName" asp-for="Event.EventName"></label>
                </div>
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <!-- Event Start Date -->
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Event.EventStartDate" type="date" class="form-control" id="EventStartDate" placeholder="Select Start Date">
                    <label for="EventStartDate" asp-for="Event.EventStartDate"></label>
                </div>
                <span asp-validation-for="Event.EventStartDate" class="text-danger"></span>
            </div>

            <!-- Event End Date -->
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Event.EventEndDate" type="date" class="form-control" id="EventEndDate" placeholder="Select End Date">
                    <label for="EventEndDate" asp-for="Event.EventEndDate"></label>
                </div>
                <span asp-validation-for="Event.EventEndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <!-- Classes (Full Row) -->
            <div class="col-md-12">
                <label for="EventClasses" class="form-label">@Html.DisplayNameFor(model => model.Event.ClassEvents)</label>
                <select asp-for="Event.ClassEvents" class="form-select" id="EventClasses" multiple>
                    <option value="Class1">Class 1</option>
                    <option value="Class2">Class 2</option>
                    <option value="Class3">Class 3</option>
                    <option value="Class4">Class 4</option>
                </select>
                <span asp-validation-for="Event.ClassEvents" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
            <div class="d-flex gap-2">
                <button type="submit" name="action" value="Add" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>

</div>
