@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="text-center">
        <div class="alert alert-danger shadow-lg p-4 rounded">
            <h4 class="fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Unexpected Error</h4>
            <p class="mb-3">An unexpected error happened. Please contact the system administrator.</p>
            <a href="/" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>
</div>
