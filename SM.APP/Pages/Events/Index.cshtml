@page
@model SM.APP.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Events";
}

<div class="container py-5">
    <h1 class="mb-4">Events</h1>

    <ul class="nav nav-tabs" id="eventsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming-tab-pane" type="button" role="tab" aria-controls="upcoming-tab-pane" aria-selected="true">
                Upcoming
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past-tab-pane" type="button" role="tab" aria-controls="past-tab-pane" aria-selected="false">
                Past
            </button>
        </li>
    </ul>

    <div class="tab-content" id="eventsTabContent">
        <div class="tab-pane fade show active p-3" id="upcoming-tab-pane" role="tabpanel" aria-labelledby="upcoming-tab" tabindex="0">
            <div class="row">
                @if (Model.UpcomingEvents.Any())
                {
                    @foreach (var item in Model.UpcomingEvents)
                    {
                        <div class="col-12 col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title me-3">@Html.DisplayFor(modelItem => item.EventName)</h5>
                                        <div class="dropdown">
                                            <button class="btn btn-link text-secondary p-0" type="button" id="eventActions-@item.EventID" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="eventActions-@item.EventID">
                                                <li><a class="dropdown-item" asp-page="./RegisterEvent" auth-policy="Events.Register" asp-route-eventID="@item.EventID">Registration</a></li>
                                                <li><a class="dropdown-item" asp-page="./EventAttendance" auth-policy="Events.Attendance" asp-route-eventID="@item.EventID">Attendance</a></li>
                                                <li><a class="dropdown-item" asp-page="./ListEventMembers" auth-policy="Events.View" asp-route-eventID="@item.EventID">View Members</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <p class="card-text text-muted small">
                                        <i class="bi bi-calendar-event me-2"></i> Placeholder Date <br />
                                        <i class="bi bi-geo-alt me-2"></i> Placeholder Location
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-success d-flex align-items-center justify-content-center p-2" role="alert">
                        <div class="alert-warning">There are no upcoming events.</div>
                    </div>
                }
            </div>
        </div>

        <div class="tab-pane fade p-3" id="past-tab-pane" role="tabpanel" aria-labelledby="past-tab" tabindex="0">
            <div class="row">
                @if (Model.PastEvents.Any())
                {
                    @foreach (var item in Model.PastEvents)
                    {
                        <div class="col-12 col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title me-3">@Html.DisplayFor(modelItem => item.EventName)</h5>
                                        <div class="dropdown">
                                            <button class="btn btn-link text-secondary p-0" type="button" id="eventActions-@item.EventID" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="eventActions-@item.EventID">
                                                <li><a class="dropdown-item" asp-page="./RegisterEvent" auth-policy="Events.Register" asp-route-eventID="@item.EventID">Registration</a></li>
                                                <li><a class="dropdown-item" asp-page="./EventAttendance" auth-policy="Events.Attendance" asp-route-eventID="@item.EventID">Attendance</a></li>
                                                <li><a class="dropdown-item" asp-page="./ListEventMembers" auth-policy="Events.View" asp-route-eventID="@item.EventID">View Members</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-success d-flex align-items-center justify-content-center p-2" role="alert">
                        <div class="alert-warning">There are no past events to display.</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>