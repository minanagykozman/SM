@page "{id:int?}"
@model SM.APP.Pages.Funds.DetailModel
@{
    ViewData["Title"] = "Fund Details";
}

<partial name="_LoadingPartial" />
<div class="container mt-4" id="container">
    <h1 class="text-center">Fund Details</h1>
    <hr />
    <div class="card shadow-lg p-4">
        <partial name="_SuccessToastPartial" />

        <div id="loadingSpinner" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading fund details...</p>
        </div>

        <div id="fundContent" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <ul class="nav nav-tabs" id="fundTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="fund-details-tab" data-bs-toggle="tab" data-bs-target="#fund-details" type="button" role="tab">
                            Member Details
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="member-details-tab" data-bs-toggle="tab" data-bs-target="#member-details" type="button" role="tab">
                           Fund Details
                        </button>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <span id="requestStatusBadge" class="badge bg-secondary fs-4 px-3 py-2 me-3">Loading...</span>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><button class="dropdown-item" type="button" id="editFundBtn"><i class="bi bi-pencil me-2"></i>Edit</button></li>
                            <li><button class="dropdown-item" type="button" id="updateStatusBtn"><i class="bi bi-check2-square me-2"></i>Update Status</button></li>
                            <li><button class="dropdown-item" type="button" id="addNoteBtn"><i class="bi bi-sticky me-2"></i>Add Note</button></li>
                            <li id="deleteFundSeparator"><hr class="dropdown-divider"></li>
                            <li id="deleteFundLi"><button class="dropdown-item text-danger" type="button" id="deleteFundBtn"><i class="bi bi-trash me-2"></i>Delete</button></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="fundTabsContent">
                <div class="tab-pane fade show active" id="fund-details" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-12 text-center mb-4">
                            <div id="memberImageContainer">
                                <img id="memberImage" class="img-thumbnail shadow-sm mx-auto d-block d-none" alt="Member Photo" style="max-height: 200px;" />
                                <i id="memberImagePlaceholder" class="fas fa-user-circle fa-5x text-secondary mx-auto d-block d-none"></i>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="memberCode" class="form-control" readonly />
                                <label>Code</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="memberName" class="form-control" readonly />
                                <label>Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="memberMobile" class="form-control" readonly />
                                <label>Mobile</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="familyMembers" class="form-control" readonly />
                                <label>Family Members</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="lastUpdateDate" class="form-control" readonly />
                                <label>Last Update Date</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="memberCreationDate" class="form-control" readonly />
                                <label>Member Creation Date</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea id="memberNotes" class="form-control" readonly style="height: 100px;"></textarea>
                                <label>Member Notes</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-calendar-check text-info me-2"></i>
                                Attendance History
                            </h5>
                            <partial name="_LoadAttendanceHistoryPartial" />
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="member-details" role="tabpanel">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="requestType" class="form-control" readonly />
                                <label>Request Type</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="creationDate" class="form-control" readonly />
                                <label>Creation Date</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="requestedAmount" class="form-control" readonly />
                                <label>Requested Amount</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="approvedAmount" class="form-control" readonly />
                                <label>Approved Amount</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea id="requestDescription" class="form-control" readonly style="height: 80px;"></textarea>
                                <label>Request Description</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="createdBy" class="form-control" readonly />
                                <label>Created By</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input id="assignedTo" class="form-control" readonly />
                                <label>Assigned To</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <h6 class="mb-2">
                                <i class="fas fa-sticky-note text-info me-2"></i>
                                Fund Notes
                            </h6>
                            <div id="fundNotes" class="border rounded p-3 bg-light" style="min-height: 100px;">
                                <p class="text-muted mb-0">Loading notes...</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-history text-primary me-2"></i>
                                Old Funds History
                            </h5>
                            <partial name="_LoadFundsPartial" />
                        </div>
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-history text-primary me-2"></i>
                                General Aids History
                            </h5>
                            <partial name="_ListAidsPartial" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="/Funds" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Edit Fund Modal -->
<partial name="_FundEditPartial" />
<!-- Update Status Modal -->
<partial name="_FundUpdateStatusPartial" />
<!-- Add Notes Modal -->
<partial name="_FundAddNotesPartial" />
<!-- Delete Modal -->
<partial name="_DeleteFundModalPartial" />

@section Scripts {
    <script>
        var apiBaseUrl = '@Services.SMConfigurationManager.ApiBase';
    </script>
    <script src="~/js/funds/common.js" asp-append-version="true"></script>
    <script src="~/js/funds/listing.js" asp-append-version="true"></script>
    <script src="~/js/aids/listing.js" asp-append-version="true"></script>
    <script src="~/js/meetings/list-member-attendance.js" asp-append-version="true"></script>
    <script src="~/js/funds/detail.js" asp-append-version="true"></script>
} 