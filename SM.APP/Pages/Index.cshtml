@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <h2 class="text-center mb-4">System Modules</h2>
        <div class="row g-3">
            <div class="col-6 col-md-4 col-lg-3" auth-policy="Class.View">
                <a href="/Classess" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-calendar-check fs-1"></i>
                        <h5 class="mt-2">Class Management</h5>
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-4 col-lg-3" auth-policy="Members.View">
                <a href="/Admin/Members/Search" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-people fs-1"></i>
                        <h5 class="mt-2">Members</h5>
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-4 col-lg-3" auth-policy="Events.View">
                <a href="/Events" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-calendar-event fs-1"></i>
                        <h5 class="mt-2">Events</h5>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-3" auth-policy="Members.ManageCards">
                <a href="/Cards" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-person-badge fs-1"></i>
                        <h5 class="mt-2">Cards</h5>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-3" auth-policy="Aids.View">
                <a href="/Aids" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-hospital fs-1"></i>
                        <h5 class="mt-2">Aids</h5>
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-4 col-lg-3" auth-policy="Funds.View">
                <a href="/Funds" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-cash-coin fs-1"></i>
                        <h5 class="mt-2">Funds</h5>
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-4 col-lg-3" auth-policy="Medical.View">
                <a href="/Medical" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-clipboard-pulse fs-1"></i>
                        <h5 class="mt-2">Medical</h5>
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-4 col-lg-3">
                <a href="/Admin" class="text-decoration-none">
                    <div class="card text-center p-4 shadow-sm">
                        <i class="bi bi-gear fs-1"></i>
                        <h5 class="mt-2">Administration</h5>
                    </div>
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center mt-5">
        <div class="alert alert-warning p-4">
            <h4>Please log in to see available modules</h4>
            <a href="/Identity/Account/Login" class="btn btn-primary mt-3">Log In</a>
        </div>
    </div>
}