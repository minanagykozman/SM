@page
@model SM.APP.Pages.Aids.IndexModel
@{
    ViewData["Title"] = "Aids";
}

<div class="container py-5">
    <h1 class="border-bottom pb-3 mb-4">Aids</h1>

    <h2 class="mb-3">Upcoming Aids</h2>
    <div class="row">
        @if (Model.Aids.Any())
        {
            @foreach (var item in Model.Aids)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title me-3">@Html.DisplayFor(modelItem => item.AidName)</h5>

                                <div class="dropdown">
                                    <button class="btn btn-link text-secondary p-0" type="button" id="aidActions-@item.AidID" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="aidActions-@item.AidID">
                                        <li><a class="dropdown-item" asp-page="./RegisterAid" asp-route-aidID="@item.AidID">Registration</a></li>
                                    </ul>
                                </div>
                            </div>

                            <p class="card-text text-muted small mt-auto">
                                <i class="bi bi-calendar-check me-2"></i> Distribution Date: @Html.DisplayFor(modelItem => item.AidDate) <br />
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <div>There are no upcoming aids to display.</div>
                </div>
            </div>
        }
    </div>
</div>